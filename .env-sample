# Spermwhale Configuration File
# Copy this file to .env and configure your settings

# ============================================
# REQUIRED SETTINGS
# ============================================

# OpenAI API Key (required for GPT translator and Whisper)
OPENAI_API_KEY=your-key-here

# Translation Engine: gpt, helsinki, or facebook
# - gpt: OpenAI GPT (cloud-based, requires API key, highest quality)
# - helsinki: Helsinki NLP MarianMT (local, free, fast)
# - facebook: Facebook NLLB-200 (local, free, high quality)
TRANSLATOR_ENGINE=helsinki

# Target Translation Language (ISO 639-1 code: pt, es, fr, etc.)
TRANSLATION_LANGUAGE=pt

# Source Language (default: en)
FROM_TRANSLATION_LANGUAGE=en

# ============================================
# OPTIONAL SETTINGS
# ============================================

# Microphone Index (leave blank for auto-selection)
MICROPHONE=1

# Whisper Model Size: tiny, base, small, medium, large
# Larger models are more accurate but slower
MODEL_SIZE=small

# OpenAI Translation Model (only used with gpt translator)
TRANSLATION_MODEL=gpt-3.5-turbo

# Verbose Logging
VERBOSE=True

# File Paths
GENERATED_DIR=generated
AUDIO_FILE=mic.wav
OUTPUT_FILE=translation.txt
OUTPUT_TRANSCRIPTION_FILE=transcription.txt

# Audio Processing Settings
FRAME_DURATION=10
SILENCE_TIMEOUT=1.0